<h1>Restaurants</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
    <th>Phone</th>
  </tr>
  <% @restaurants.each do |restaurant| %>
    <tr>
      <td><%= restaurant.name %></td>
      <td><%= restaurant.description %></td>
      <td><%= restaurant.address %></td>
      <td><%= restaurant.phone %></td>
      <td><%= link_to "Show", restaurant %></td>
      <td><%= link_to "Edit", edit_restaurant_path(restaurant) %></td>
      <td><%= link_to "Delete", restaurant, data: { confirm: "Are you sure?" }, method: :delete %></td>
    </tr>
  <% end %>

</table>

<div>
  <h3>All restaurants, on a map </h3>
  <img src="<%= @gmap_markers %>">
</div>

<p><%= link_to "Add Restaurant", new_restaurant_path %></p>